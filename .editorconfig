root=true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.rb,*.rake,*.yml,Gemfile,Rakefile,config.ru}]
indent_style = space
indent_size = 2
max_line_length = 120

[{*.go,go.mod,Makefile}]
indent_style = tab
tab_width = 4

[{*.js,*.ts,*.vue}]
indent_style = space
indent_size = 2
