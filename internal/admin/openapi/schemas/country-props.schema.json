{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "country-props.schema.json",
  "title": "CountryProps",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "primary-id.schema.json"
    },
    "human_name": {
      "type": "string",
      "minLength": 1,
      "description": "The human-readable name of the country",
      "example": "United States"
    },
    "alpha_2_code": {
      "type": "string",
      "minLength": 2,
      "maxLength": 2,
      "description": "The ISO 3166-1 alpha-2 code for the country",
      "example": "US"
    },
    "alpha_3_code": {
      "type": "string",
      "minLength": 3,
      "maxLength": 3,
      "description": "The ISO 3166-1 alpha-3 code for the country",
      "example": "USA"
    }
  }
}
