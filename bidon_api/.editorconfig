root=true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{*.rb,*.rake,*Gemfile*}]
indent_size = 2

[{*.slim,*.haml}]
indent_size = 2

[{*.erb,*.rhtml}]
indent_style = space
indent_size = 2
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.cjsx,*.coffee}]
indent_size = 2
tab_width = 2

[{*.css,*.scss,*.sass,*.less}]
indent_size = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.markdown,*.md}]
indent_style = space
indent_size = 4
max_line_length = 0
trim_trailing_whitespace = false

[{*.yaml,*.yml}]
indent_size = 2

[{*[Mm]akefile*,*.mak,*.mk,depend}]
indent_style = tab
