{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Imp Schema",
  "type": "object",
  "required": [
    "id",
    "auction_id",
    "auction_configuration_id",
    "round_id",
    "orientation",
    "bidfloor"
  ],
  "oneOf": [
    { "required": ["banner"] },
    { "required": ["interstitial"] },
    { "required": ["rewarded"] }
  ],
  "properties": {
    "id": {
      "title": "A unique identifier for this impression within the content of the bid request, UUID",
      "type": "string"
    },
    "auction_id": {
      "title": "Auction identifier that was used to generate this request",
      "type": "string"
    },
    "auction_configuration_id": {
      "title": "Auction Configuration identifier that was used to generate this request",
      "type": "integer"
    },
    "round_id": {
      "title": "Round identifier that was used to generate this request",
      "type": "string"
    },
    "orientation": {
      "title": "The orientation Schema",
      "type": "string",
      "enum": ["PORTRAIT", "LANDSCAPE"]
    },
    "banner": {
      "title": "The banner Schema",
      "type": "object",
      "required": [
        "format"
      ],
      "properties": {
        "format": {
          "title": "The format Schema",
          "type": "string",
          "enum": ["BANNER", "LEADERBOARD", "MREC", "ADAPTIVE"]
        }
      }
    },
    "interstitial": {
      "title": "The interstitial Schema",
      "type": "object",
      "properties": {}
    },
    "rewarded": {
      "title": "The rewarded Schema",
      "type": "object",
      "properties": {}
    },
    "bidfloor": {
      "title": "Minimum bid for this impression expressed in CPM",
      "type": "number"
    },
    "demands": {
      "title": "Object with demand specific values",
      "type": "object"
    }
  }
}
